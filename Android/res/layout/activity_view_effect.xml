<com.aeskreis.particletoy.view.ViewEffectView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:id="@+id/viewEffectView"
    tools:context="com.aeskreis.particletoy.activity.ViewEffectActivity">

    <TextView
        android:id="@+id/effectName"
        android:text="Some Effect"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_marginTop="10dp"
        android:textSize="16dp"
        android:text="Vertex Shader:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/vertexShaderFile"
        android:text="some_vert.glsl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/editVertexShader"
        android:text="Edit File"/>

    <TextView
        android:layout_marginTop="10dp"
        android:textSize="16dp"
        android:text="Fragment Shader:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/fragmentShaderFile"
        android:text="some_frag.glsl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/editFragmentShader"
        android:text="Edit File"/>

    <TextView
        android:layout_marginTop="10dp"
        android:textSize="16dp"
        android:text="Script:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/scriptFile"
        android:text="some_script.as"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/editScript"
        android:text="Edit File"/>

    <Button
        android:layout_marginTop="30dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/playEffect"
        android:text="Play Effect"/>

</com.aeskreis.particletoy.view.ViewEffectView>
